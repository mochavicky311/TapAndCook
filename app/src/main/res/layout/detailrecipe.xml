<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signupbackground">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/chewy"
                android:textColor="@color/colorAccent"
                android:textSize="30sp"
                android:textAlignment="center"/>

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="400dp" />

            <TextView
                android:id="@+id/info"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_height="40dp"
                android:layout_width="wrap_content"
                android:textSize="20sp"
                />

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                style="@style/Base.TextAppearance.AppCompat.SearchResult.Subtitle"
            android:text="List of Ingredients"
                android:textColor="@color/colorAccent"/>

            <TextView
                android:id="@+id/ingredient"
                style="@style/Base.TextAppearance.AppCompat.SearchResult"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="20sp"/>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/button"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:text="Detail Instructions"
        android:background="#CCffffff"
        android:fontFamily="@font/chewy"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/button"
        />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/button"
        android:layout_alignParentRight="true">

        <ImageButton
            android:id="@+id/notbookmarked"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="#CCffffff"
            android:clickable="true"
            android:onClick="onClick"
            android:src="@drawable/notbookmarked" />

    </FrameLayout>

</RelativeLayout>